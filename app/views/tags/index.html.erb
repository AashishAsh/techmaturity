<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<table>
  <thead>
    <tr>
      <th>Key</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.key %></td>
        <td><%= tag.value %></td>
        <td><%= link_to 'Show', [@product, tag] %></td>
        <td><%= link_to 'Edit', edit_product_tag_path(@product, tag) %></td>
        <td><%= link_to 'Destroy', [@product, tag], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_product_tag_path(@product) %>
